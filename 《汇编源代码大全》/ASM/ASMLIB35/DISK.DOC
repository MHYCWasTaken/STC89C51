; program fragment assumes DS:@data
          .
          .
          .
          lea   dx,file_name
          call  fopen
          jc    fopen_problem
          mov   file_handle,ax  ; save for later

          mov   bx,ax           ; file handle
          mov   cx,8            ; I want 8 bytes
          call  fget            ;  returned at ES:[BX]
          jc    read_problem    ; uh oh, trouble ...
          cmp   ax,cx           ; did I get what I wanted?
          jne   not_enough
