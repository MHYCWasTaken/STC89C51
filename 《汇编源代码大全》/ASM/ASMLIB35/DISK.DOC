          .
          lea   dx,file_name
          call  fopen
          jc    fopen_problem
          mov   file_handle,ax  ; save for later

          mov   bx,ax           ; file handle
          call  fgetstr
          jc    read_problem

          call  strndup         ; make a copy in near heap for later
